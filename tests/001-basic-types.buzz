import "std";

test "Basic types" {
    str _ = "hello world";
    float _ = 3.14;
    int _ = 3;
    bool _ = true;
}

test "Underscore on number literals" {
    int a = 100_000;

    assert(a == 100000, message: "Could use a underscore on a int");

    float b = 3.1_4;

    assert(b == 3.14, message: "Could use a underscore on a float");
}

test "Char literal" {
    int char = 'A';

    assert(char == 65, message: "Could use char literal");

    int quote = '\'';

    assert(quote == 39, message: "Could escape ' in char literal");

    int slash = '\\';

    assert(slash == 92, message: "Could escape \\ in char literal");
}
